{
  "name": "Marketplace scraper",
  "version": "1.0",
  "description": "Скрапер маркетплейсов ozon/wildberries",
  "manifest_version": 2,

  "incognito": "split",
  "permissions": [
      "storage","cookies", "tabs", "http://*/*", "https://*/*" 
  ],
  
  "icons": { "32": "img/favicon.png" },
    
  "browser_action": {},
  "background": {
      "scripts": ["background.js"]
  },

  "content_scripts": [{
    "css": ["lib/bulma.min.css","styles.css"],
    "js": ["lib/vue.js", "lib/icons.js","lib/xlsx.mini.min.js","content.js"],
    "run_at": "document_idle",
    "matches": ["https://ozon.ru/*", "https://*.ozon.ru/*"]
  }],
  
  "web_accessible_resources":[
    "img/favicon.png"
  ]
}
